<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageButton
        android:id="@+id/newgamebn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="#00ffffff"
        android:src="@drawable/newgame" />

    <ImageButton
        android:id="@+id/achievementbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/newgamebn"
        android:background="#00ffffff"
        android:src="@drawable/achievementbn" />

    <ImageButton
        android:id="@+id/optionbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/achievementbn"
        android:background="#00ffffff"
        android:src="@drawable/gameoption" />

    <ImageButton
        android:id="@+id/exitbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/optionbn"
        android:background="#00ffffff"
        android:src="@drawable/exit" />

    <ImageButton
        android:id="@+id/musicbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#00ffffff"
        android:src="@drawable/musicbn" />

    <ImageButton
        android:id="@+id/soundbn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/musicbn"
        android:background="#00ffffff"
        android:src="@drawable/soundbn" />

</RelativeLayout>